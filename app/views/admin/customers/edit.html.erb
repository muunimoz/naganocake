<h1><%= @customer.first_name %><%= @customer.last_name %>さんの会員編集</h1>
<%= form_with model: @customer, url: admin_customer_path do |f| %>
  <table>
    <thead>
      <th></th>
      <th></th>
      <th></th>
    </thead>
    <tbody>
      <tr>
        <td>氏名</td>
        <td><%= f.label :first_name %>
            <%= f.text_field :first_name %></td>
        <td><%= f.label :last_name %>
        <%= f.text_field :last_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.label :first_name_kana %>
            <%= f.text_field :first_name_kana %></td>
        <td><%= f.label :last_name_kana %>
        <%= f.text_field :last_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td><%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "有効" %></td>
        <td><%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "無効" %></td>
      </tr>
      <tr>
        <td><%= f.submit "変更を保存", class: "btn btn-primary" %></td>
      </tr>
    </tbody>
  </table>
<% end %>