<h1>会員詳細</h1>
<table>
  <thead>
    <th></th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <tb>会員ID</tb>
        <tb><%= @customer.id %></td>
      </tr>
      <tr>
        <tb>氏名</tb>
        <tb><%= @customer.first_name %></tb>
        <tb><%= @customer.last_name %></tb>
      </tr>
      <tr>
        <tb>フリガナ</tb>
        <tb><%= @customer.first_name_kana %></tb>
        <tb><%= @customer.last_name_kana %></tb>
      </tr>
      <tr>
        <tb>郵便番号</tb>
        <tb><%= @customer.postal_code %></tb>
      </tr>
      <tr>
        <tb>住所</tb>
        <tb><%= @customer.address %></tb>
      </tr>
      <tr>
        <tb>電話番号</tb>
        <tb><%= @customer.telephone_number %></tb>
      </tr>
      <tr>
        <tb>メールアドレス</tb>
        <tb><%= @customer.email %></tb>
      </tr>
      <tr>
        <tb>会員ステータス</tb>
        <tb><%= @customer.is_active ? '有効' : '退会' %></tb>
      </tr>
    <% end %>
  </tbody>
</table>