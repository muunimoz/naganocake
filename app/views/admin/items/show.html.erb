<h1>商品詳細</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
      <tr>
      <td>商品説明</td>
      <td><%= @item.introduction%></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= link_to @item.genre.name, admin_items_path(genre_id: @item.genre_id) %></td>
    </tr>
    <tr>
      <td>税込価格（税抜価格）</td>
      <td><%= @item.price %></td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td>
        <% if @item.is_active? %>
          <span>販売中</span>
        <% else %>
          <span>販売停止中</span>							
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<%= link_to "編集する", edit_admin_item_path(@item) %>

