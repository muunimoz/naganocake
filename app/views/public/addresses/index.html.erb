<h1>配送先登録/一覧</h1>
<%= form_with model: Address.new, url: address_path do |f| %>
  <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
		<%= f.text_field :postal_code, placeholder: "0000000" %>
	</div>
	<div>
		<%= f.label :destination, "住所" %>
		<%= f.text_field :destination, placeholder: "東京都渋谷区代々木神園町0-0" %>
	</div>
	<div>
		<%= f.label :name, "宛名" %>
		<%= f.text_field :name, placeholder: "令和道子" %>
		<%= f.submit submit, class: "btn btn-primary" %>
	</div>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.destination %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %></td>
        <td><%= link_to "削除する", edit_address_path(address.id),method: :delete, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
